

<html>

<%- include('adminHeader') %>

<body class = "body bodyLight">
	<%- include('adminNav') %>
	<form class = "addAccForm" action = "/adminDepositMoney" method = "POST">

		<h1 class='head'>Deposit Money</h1>

		<div class="form-group row">
			<label for="fname" class="col-sm-2 col-form-label">Full name</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name = "dpFName" placeholder="Johnny Boy" id="fname">
			</div>
	</div>


		<div class="form-group row">

			<label for="accno" class="col-sm-2 col-form-label">Account Number</label>
			<div class="col-sm-10">
				<input type="number" class="form-control" name = "dpAccNo" placeholder="1234567890" id="accno">
			</div>
	</div>

	<div class="form-group row">
			<label for="ifsc" class="col-sm-2 col-form-label">IFSC Code</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name = "dpIfscCode" id="ifsc" placeholder="1AYJKLF897">
			</div>
	</div>

	<div class="form-group row">
			<label for="ammount" class="col-sm-2 col-form-label">Amount</label>
			<div class="col-sm-10">
				<input type="number" class="form-control" name = "dpAmount" id="amount" placeholder="1000">
			</div>
	</div>

	</div>

	<button type="submit" value = "deposit" name = "dpButton" class="btn btn-outline-light">Deposit</button>

	</form>
	<script src="js/darkmode.js"></script>
</body>

</html>
