

<html>

<%- include('adminHeader') %>

<body class="body bodyLight">
	<%- include('adminNav') %>
	<form class = "addAccForm" action = "/adminGrantLoan" method = "POST">
		<h1 class='head'>Loan</h1>
		<div class="form-group row">
			<label for="accno" class="col-sm-2 col-form-label">Enter account number</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="gtAccNo" id="accno" placeholder="1234567890">
			</div>
	</div>

	<div class="form-group row">
			<label for="ltype" class="col-sm-2 col-form-label">Loan type</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name = "gtLoanType" id="ltype" placeholder="">
			</div>
	</div>

	<div class="form-group row">
			<label for="lammount" class="col-sm-2 col-form-label">Loan amount</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name = "gtLoanAmm" id="lammount" placeholder="1000">
			</div>
	</div>

	<div class="form-group row">
			<label for="interest" class="col-sm-2 col-form-label">Interest Percentage</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name = "gtLoanPt" id="interest" placeholder="2 (in Percentage)">
			</div>
	</div>


	<button type="submit" class="btn btn-outline-light">Grant</button>

	</form>
	<script src="js/darkmode.js"></script>
</body>

</html>
