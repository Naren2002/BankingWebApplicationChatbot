<html>

<%- include('adminHeader') %>

<body class="body bodyLight">

  <%- include('adminNav') %>

	<form class="addAccForm" action = "/adminWithdraw" method = "POST">

		<h1 class='head'>Withdraw Money</h1>
			<div class="form-group row">
				<label for="aano" class="col-sm-2 col-form-label">Account Number</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" name = "wdAccNo" id="accno" placeholder = "1234567890">
				</div>
			</div>

			<div class="form-group row">
				<label for="ifsc" class="col-sm-2 col-form-label">IFSC Code</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" name = "wdIfscCode" id="ifsc" placeholder = "1AUOI1">
				</div>
			</div>

			<div class="form-group row">
				<label for="amount" class="col-sm-2 col-form-label">Amount</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" name = "wdAmount" id="amount" placeholder = "1000">
				</div>
			</div>


			<button type="submit" name ="wdBut" value = "wdBut" class="btn btn-outline-light">Withdraw</button>

	</form>
	<script src="js/darkmode.js"></script>
</body>

</html>
